{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Describes a unicast network-flow.",
  "title": "Unicast network-flow",
  "allOf": [
    {
      "$ref": "network-flow-core.json"
    },
    {
      "type": "object",
      "required": [
        "protocol_id",
        "sender_id",
        "receiver_id"
      ],
      "properties": {
        "protocol_id": {
          "description": "Protocol ID for this network-flow.",
          "type": "string"
        },
        "sender_id": {
          "description": "Application ID which this network-flow originates from.",
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
        },
        "receiver_id": {
          "description": "Destination application ID for this unicast network-flow.",
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
        }
      }
    }
  ]
}
