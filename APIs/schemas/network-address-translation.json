{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Describes a simple network address translation schema.",
  "title": "Network Address translation IP Address and/or Port",
  "properties": {
    "id": {
      "description": "Globally unique identifier for translation policy",
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "description": {
      "type": "string",
      "description": "Optional. Translation policy name"
    },
    "match_source_ip": {
      "type": "string",
      "description" : "Optional. If supplied, translate only if sender ip matches",
      "anyOf" : [
        {
          "format" : "ipv4"
        },
       {
         "format" : "ipv6"
        }
       ]
    },
    "match_source_port": {
      "description": "Optional. If supplied, translate only if sender port matches",
      "type": "number",
      "pattern": "([1-9]|[1-8][0-9]|9[0-9]|[1-8][0-9]{2}|9[0-8][0-9]|99[0-9]|[1-8][0-9]{3}|9[0-8][0-9]{2}|99[0-8][0-9]|999[0-9]|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[0-5])"
    },
    "match_destination_ip": {
      "type": "string",
      "description" : "Optional. If supplied, translate only if destination  ip matches",
      "anyOf" : [
        {
          "format" : "ipv4"
        },
       {
         "format" : "ipv6"
        }
       ]
    },
    "match_destination_port": {
      "description": "Optional. If supplied, translate only if sender port matches",
      "type": "number",
      "pattern": "([1-9]|[1-8][0-9]|9[0-9]|[1-8][0-9]{2}|9[0-8][0-9]|99[0-9]|[1-8][0-9]{3}|9[0-8][0-9]{2}|99[0-8][0-9]|999[0-9]|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[0-5])"
    },
    "translated-source-ip": {
      "type": "string",
      "description" : "Optional. If present, translate source to this IP if match condition(s) are true",
      "anyOf" : [
        {
          "format" : "ipv4"
        },
       {
         "format" : "ipv6"
        }
       ]
    },
    "translated_source_port": {
      "description":"Optional. If present, translate source port to this port if match condition(s) are true", 
      "type": "number",
      "pattern": "([1-9]|[1-8][0-9]|9[0-9]|[1-8][0-9]{2}|9[0-8][0-9]|99[0-9]|[1-8][0-9]{3}|9[0-8][0-9]{2}|99[0-8][0-9]|999[0-9]|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[0-5])"
    },
    "translated-destination-ip": {
      "type": "string",
      "description" : "Optional. If present, translate destination to this IP if match condition(s) are true",
      "anyOf" : [
        {
          "format" : "ipv4"
        },
       {
         "format" : "ipv6"
        }
       ]
    },
    "translated_destination_port": {
      "description": "Optional. If present, translate destination to this port if match condition(s) are true",
      "type": "number",
      "pattern": "([1-9]|[1-8][0-9]|9[0-9]|[1-8][0-9]{2}|9[0-8][0-9]|99[0-9]|[1-8][0-9]{3}|9[0-8][0-9]{2}|99[0-8][0-9]|999[0-9]|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[0-5])"
     },
    "receiver_endpoint_ids": {
      "type": "array",
      "description": "List of receiver endpoint IDs.",
      "items": {
        "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
      },
      "minItems": 0,
      "uniqueItems": true
    }
  },
  "anyOf": [
    {
      "required": [
        "translated_source_ip"
      ]
    },
    {
      "required": [
        "translated_source_port"
      ]
    },
    {
      "required": [
        "translated_destination_ip"
      ]
    },
    {
      "required": [
        "translated_destination_port"
      ]
    }            
  ],
  "required": [
    "id",
    "receiver_endpoint_ids"
  ]
}
