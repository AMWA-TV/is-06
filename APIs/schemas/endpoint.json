{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The unique identifier for the Device. Mac-address is used",
      "pattern":"^([0-9A-Fa-f]{2}[:]){5}([0-9A-Fa-f]{2})$"
    },
    "description": {
      "type": "string"
    },
    "chassis-id": {
      "type": "string"
    },
    "port-id": {
      "type": "string"
    }
  },
  "required": [
    "id",
    "description",
    "chassis-id",
    "port-id"
  ]
}
