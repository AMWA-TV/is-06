{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "chassis_id",
    "port_id",
    "peer_chassis_id",
    "peer_port_id",
    "speed"
  ],
  "properties": {
    "chassis_id": {
      "type": "string",
      "description": "MAC address for the network device.",
      "pattern": "^([0-9A-Fa-f]{2}[-]){5}([0-9A-Fa-f]{2})$"
    },
    "port_id": {
      "type": "string",
      "description": "The ifAlias of the network device."
    },
    "peer_chassis_id": {
      "type": "string",
      "description": "MAC address for the peer device.",
      "pattern": "^([0-9A-Fa-f]{2}[-]){5}([0-9A-Fa-f]{2})$"
    },
    "peer_port_id": {
      "type": "string",
      "description": "The ifAlias of the peer device."
    },
    "speed": {
      "enum": [
        "100Mbit/s",
        "1Gbit/s",
        "10Gbit/s",
        "25Gbit/s",
        "40Gbit/s",
        "50Gbit/s",
        "100Gbit/s"
      ]
    }
  }
}
