{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "description": "Globally unique identifier for the network device.",
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "version": {
      "description": "String formatted TAI timestamp (<seconds>:<nanoseconds>) indicating precisely when an attribute of the network device last changed",
      "type": "string",
      "pattern": "^[0-9]+:[0-9]+$"
    },
    "label": {
      "description": "Freeform string label for the network device",
      "type": "string"
    },
    "description": {
      "description": "Detailed description of the network device",
      "type": "string"
    },
    "tags": {
      "description": "Key value set of freeform string tags to aid in filtering network device, if necessary. Values should be represented as an array of strings. Can be empty.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "serial_number": {
      "type": "string"
    },
    "product_id": {
      "type": "string"
    },
    "product_description": {
      "type": "string"
    },
    "vendor": {
      "type": "string"
    },
    "mac_address": {
      "type": "string",
      "pattern":"^([0-9A-Fa-f]{2}[-]){5}([0-9A-Fa-f]{2})$" 
    },
    "mgmt_ip": {
      "type": "string"
    },
    "image_file": {
      "type": "string"
    },
    "build_time": {
      "type": "string"
    },
    "uptime": {
      "type": "string"
    },
    "last_reset_reason": {
      "type": "string"
    },
    "interfaces": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "if_name": {
            "type": "string"
          },
          "admin_status": {
            "enum": [ "up","down" ]
          },
          "oper_status": {
            "enum": [ "up","down" ]
          },
          "down_reason": {
            "type": "string"
          },
          "built_in_mac_address": {
            "type": "string",
            "pattern":"^([0-9A-Fa-f]{2}[-]){5}([0-9A-Fa-f]{2})$"
          },
          "mac_address": {
            "type": "string",
            "pattern":"^([0-9A-Fa-f]{2}[-]){5}([0-9A-Fa-f]{2})$"
          },
          "ip_address": {
            "type": "string"
          },
          "operating_speed": {
            "enum": [ "100M","1G","10G","25G","40G","50G","100G" ]
          },
          "MTU": {
            "type": "string"
          },
          "mode": {
            "enum": [ "routed","trunk","access" ]
          }
        },
        "required": [
          "if_name",
          "admin_status",
          "oper_status",
          "down_reason",
          "built_in_mac_address",
          "mac_address",
          "ip_address",
          "operating_speed",
          "MTU",
          "mode"
        ]
      }
    }
  },
  "required": [
    "id",
    "version",
    "name",
    "serial_number",
    "product_id",
    "product_description",
    "vendor",
    "mac_address",
    "mgmt_ip",
    "image_file",
    "build_time",
    "uptime",
    "last_reset_reason",
    "interfaces"
  ]
}
