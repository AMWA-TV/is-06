{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Create a network flow.",
  "title": "Create a new network flow.",
  "allOf": [
    {
      "$ref": "network-flow-minimal.json"
    },
    {
      "type": "object",
      "required": [
        "senders"
      ],
      "properties": {
        "senders": {
          "type": "array",
          "description": "List of senders.",
          "items": {
            "endpoint_id": {
              "type": "string",
              "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
            }
          },
          "minItems": 1,
          "maxitems": 1,
          "uniqueItems": true
        },
        "receivers": {
          "type": "array",
          "description": "List of receivers.",
          "items": {
            "endpoint_id": {
              "type": "string",
              "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
            }
          },
          "minItems": 0,
          "maxitems": 1,
          "uniqueItems": true
        }
      }
    }
  ]
}
