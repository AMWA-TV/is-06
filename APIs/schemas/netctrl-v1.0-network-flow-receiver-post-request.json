{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Post request schema for adding new receivers to an existing network flow.",
  "title": "Single receiver for a multicast network-flow.",
  "required": [
    "receivers"
  ],
  "properties": {
    "receivers": {
      "type": "array",
      "description": "List of receiver IDs.",
      "items": {
        "type": "string",
        "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "route_flow": {
      "description": "Flag for routing the flow",
      "type": "boolean",
      "default": true
    }
  }
}
