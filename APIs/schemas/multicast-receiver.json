{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Describes a multicast network-flow listener.",
  "title": "Multicast network-flow listener",
  "required": [
    "receiver_app_id"
  ],
  "properties": {
    "receiver_app_id": {
      "description": "GUID of the receiver application, can not be empty.",
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "sender_app_id": {
      "description": "GUID of the sender application, can be empty. If empty its a <*,G> subscription, otherwise its <S,G> subscription.",
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    }
  }
}
