{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Describes a unicast network-flow.",
  "title": "Unicast network-flow",
  "allOf": [
    {
      "$ref": "network-flow-core.json"
    },
    {
      "type": "object",
      "required": [
        "destination_application_ids"
      ],
      "properties": {
        "destination_application_ids": {
          "description": "UUIDs of destination applications, can be empty.",
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
          },
          "minItems": 0,
          "uniqueItems": true
        }
      }
    }
  ]
}
